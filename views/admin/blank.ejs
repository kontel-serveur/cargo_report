                 <h1>Profile</h1>
        <form id="profileForm" style="margin-bottom: 35px;">

            <div class="form-group">
                <label for="serviceName">Nom & Prenom</label>
                <input type="text" name="fullName" value="" required>
            </div>

            <div class="form-group">
                <label for="serviceName">Email</label>
                <input type="email" name="email" value="" required>
            </div>
            


            <button type="submit">Enregistrez</button>
        </form>


        <hr />

        <form id="passwordForm" style="margin-top: 35px;">

            <div class="form-group">
                <label for="serviceName">Mot de passe</label>
                <input type="password" name="current_password" value="" required>
            </div>

            <div class="form-group">
                <label for="serviceName">Nouveau mot de passe</label>
                <input type="password" name="password" value="" required>
            </div>

            <div class="form-group">
                <label for="serviceName">Confirmer nouveau mot de passe</label>
                <input type="password" name="confirm_password" value="" required>
            </div>


            

            <button type="submit">Change password</button>
        </form>

        <script src="/scripts/admin_profile.js"></script>
                 
    </div>
